<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"
        android:text="Anterior Direita (AD)"
        android:textColor="@color/black_light"
        android:textSize="18dp" />

    <RadioGroup
        android:id="@+id/rGTesteAnteriorDir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton13"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="N" />

        <RadioButton
            android:id="@+id/radioButton15"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="+" />

        <RadioButton
            android:id="@+id/radioButton14"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="++" />

        <RadioButton
            android:id="@+id/radioButton16"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="+++" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"
        android:text="Anterior Esquerda (AE)"
        android:textColor="@color/black_light"
        android:textSize="18dp" />

    <RadioGroup
        android:id="@+id/rGTesteAnteriorEsq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton17"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="N" />

        <RadioButton
            android:id="@+id/radioButton18"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="+" />

        <RadioButton
            android:id="@+id/radioButton20"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="++" />

        <RadioButton
            android:id="@+id/radioButton19"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="+++" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"
        android:text="Posterior Direita (PD)"
        android:textColor="@color/black_light"
        android:textSize="18dp" />

    <RadioGroup
        android:id="@+id/rGTestePosteriorDir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton24"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="N" />

        <RadioButton
            android:id="@+id/radioButton23"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="+" />

        <RadioButton
            android:id="@+id/radioButton22"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="++" />

        <RadioButton
            android:id="@+id/radioButton21"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="+++" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"
        android:text="Posterior Esquerda (PE)"
        android:textColor="@color/black_light"
        android:textSize="18dp" />

    <RadioGroup
        android:id="@+id/rGTestePosteriorEsq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton28"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="N" />

        <RadioButton
            android:id="@+id/radioButton27"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="+" />

        <RadioButton
            android:id="@+id/radioButton26"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="++" />

        <RadioButton
            android:id="@+id/radioButton25"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="+++" />
    </RadioGroup>

</LinearLayout>